<section class='m-5 d-flex justify-content-end'>
	<a href='/api/products' class='btn btn-secondary fs-5'>Continue without logging in</a>	
</section>

<div class='container'>
	<h1>Password reset</h1>
    <div class='container-forgotPass col-md-8'>
        <p class='fs-4'>We'll send you an email to confirm that you want to reset your password.</p>
        {{#if emailSent}}
            <h2 class='text-success fs-3'>Email sent</h2>
        {{else}}  
            <form action='' id='emailResetPasswordForm'>
                <div class='m-3'>
                    <input type='email' name='to' placeholder='Email' class='w-75 text-center fs-3' />
                </div>
                <button type='submit' class='btn btn-secondary fs-3'>Send email</button>
            </form>
            <p class='text-danger fs-5'>Enter a correct user</p>
        {{/if}}

        <div class='col-md-12'>
            <p class='fs-4 text-end'>Back to <a href='/api/login'>Log in.</a></p>
        </div>
    </div>
</div>


<script src='/js/emailResetPassword.js'></script>