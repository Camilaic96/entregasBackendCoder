<section id='section-welcome' class='m-5 d-flex justify-content-between'>
	<div>
		<p class='fs-3'>Welcome <span class='bold '>{{user.first_name}} {{user.last_name}}</span></p>
	</div>
	<div class='d-flex align-items-center'>
		<div class='dropdown'>
			<button class='dropdown-toggle border-0' type='button' data-bs-toggle='dropdown' aria-expanded='false'>
				<img src='/img/account.png' alt='dropdown account' width='32' height='32'>
			</button>
			<ul class='dropdown-menu fs-4'>
				<li><a href='/api/profile' class='dropdown-item'>Profile</a></li>
				<li><a href='/api/auth/logout' class='dropdown-item'>Log out</a></li>
			</ul>
		</div>
	</div>
</section>
<h2>Panel admin</h2>
<section class='m-5 d-flex justify-content-end'>
	<button class='btn btn-secondary fs-5 m-3' id="deleteInactiveUsersBtn">Delete inactive users</button>
</section>
<div class="row justify-content-evenly">
    {{#each users}}
        <div class='card col-md-3 m-3'>
            <div class='card-body fs-4'>
                <p class='card-text'>First name: <span class='bold'>{{this.user.first_name}}</span></p>
                <p class='card-text'>Last name: <span class='bold'>{{this.user.last_name}}</span></p>
                <p class='card-text'>Email: <span class='bold'>{{this.user.email}}</span></p>
                <p class='card-text'>Role: <span class='bold'>{{this.user.role}}</span></p>
				<a href='/api/users/{{this.user._id}}' class='btn btn-secondary'>See more</a>
            </div>
        </div>
    {{/each}}
</div>

<script src='/js/panelAdmin.js'></script>