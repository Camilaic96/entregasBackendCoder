{{#if user}}
		<section id='section-welcome' class='m-5 d-flex justify-content-between'>
			<div>
				<p class='fs-3'>Welcome <span class='bold '>{{user.first_name}} {{user.last_name}}</span></p>
			</div>
			<div class='d-flex align-items-center'>
				<div class='dropdown'>
					<button class='dropdown-toggle border-0' type='button' data-bs-toggle='dropdown' aria-expanded='false'>
						<img src='/img/account.png' alt='dropdown account' width='32' height='32'>
					</button>
					<ul class='dropdown-menu fs-4'>
						<li><a href='/api/profile' class='dropdown-item'>Profile</a></li>
						{{#if isUser}}
							<li><a href='/api/premium' class='dropdown-item'>Premium</a></li>
						{{/if}}
						<li><a href='/api/auth/logout' class='dropdown-item'>Log out</a></li>
					</ul>
				</div>
			</div>
		</section>
{{else}}
		<section class='m-5 d-flex justify-content-end'>
			<a href='/api/login' class='btn btn-secondary fs-5 m-3'>Log in</a>	
			<a href='/api/signup' class='btn btn-secondary fs-5 m-3'>Sign up</a>	
		</section>
{{/if}}

<section  class='m-5'>
    <h2 class='text-center'>Products added to the cart</h2>
	<div class='row d-flex justify-content-center'>
		<div class='card col-md-10 m-3 fs-4 border-0'>
			<div class='card-body d-flex justify-content-between'>
				<p class='card-text bold col-md-2'>Title</p>
				<p class='card-text bold col-md-2'>Description</p>
				<p class='card-text bold col-md-2'>Price</p>
				<p class='card-text bold col-md-2'>Quantity</p>
				<p class='card-text bold col-md-2'>Total</p>
			</div>
		</div>
		{{#each products}}
			<div class='card col-md-10 m-3 fs-4'>
				<div class='card-body d-flex justify-content-between '>
					<p id="cid" hidden>{{../cartId}}</p>
					<p id="pid" hidden>{{this.id}}</p>
					<p class='card-text bold col-md-2'>{{this.title}}</p>
					<p class='card-text bold col-md-2'>{{this.description}}</p>
					<p class='card-text bold col-md-2'>${{this.price}}</p>
					<div class='btn-group d-flex flex-column card-text bold col-md-2' role='group' aria-label='quantity product'>
						<button type='button' class='btn' id='decrementBtn'>-</button>
						<button type='button' class='btn fs-3' id='quantity' disabled>{{this.quantity}}</button>
						<button type='button' class='btn' id='incrementBtn'>+</button>
					</div>
					<div>
						<button class='btn btn-secondary fs-3 m-3 col-md-6' id='checkQuantityBtn'>check</button>
					</div>
					<p class='card-text bold col-md-2'>${{this.total}}</p>
					<button class='btn btn-secondary fs-3' id='deleteProdOfCartBtn'><img src='/img/delete.png' alt='dropdown account' width='32' height='32'></button>
				</div>
			</div>
		{{/each}}
	</div>
	<div class="row justify-content-end">
	<a href='/api/carts/{{cartId}}/purchase' class='btn btn-success m-3 fs-3 col-md-2'>Purchase</a>
</div>
</section>

<div>
	<a href='/api/products' class='btn btn-secondary m-3 fs-3'>See all products</a>
</div>


<script src='/js/deleteProdOfCart.js'></script>