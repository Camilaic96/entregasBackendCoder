<header id='header' class='p-4 d-flex justify-content-between'>
	<img src='/img/logo.png' alt='logo' width='100'>
	<a href='/api/products' class='btn btn-outline-dark fs-4 m-4'>Continue without logging in</a>
</header>

<div id='container-form-signup' class='d-flex flex-column justify-content-center align-items-center mt-5'>
	<div class='container-signup col-md-4'>
		<img src='/img/account-form.svg' alt='account icon' width='150' height='150' id='account-form-icon'>
		<form action='' id='formSignup' class='fs-3 d-flex flex-column align-items-center row'>
			<div class='m-3'>
				<input type='text' name='first_name' placeholder='First name' class='w-100 text-center' />
			</div>
			<div class='m-3'>
				<input type='text' name='last_name' placeholder='Last name' class='w-100 text-center' />
			</div>
			<div class='m-3'>
				<input type='number' name='age' placeholder='Age' class='w-100 text-center' />
			</div>
			<div class='m-3'>
				<input type='email' name='email' placeholder='Email' class='w-100 text-center' />
			</div>
			<div class='m-3'>
				<input type='password' name='password' placeholder='Password' class='w-100 text-center' />
			</div>
			<div class='d-flex justify-content-evenly m-3'>
				<div class='form-check ms-3 border-1'>
					<input class='form-check-input' type='radio' name='role' id='role-admin'>
					<label class='form-check-label' for='role-admin'>
						Admin
					</label>
				</div>
				<div class='form-check ms-3 border-1'>
					<input class='form-check-input' type='radio' name='role' id='role-user' checked>
					<label class='form-check-label' for='role-user'>
						User
					</label>
				</div>
			</div>

			<button type='submit' class='btn btn-dark fs-3'>Sign up</button>
		</form>

		<p class='fs-4 text-end'>Do you already have an account? <a href='/api/login'>Log in.</a></p>
	</div>
</div>

<script src='/js/signup.js'></script>