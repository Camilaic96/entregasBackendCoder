<div class="container">
	<h1>Sign up</h1>
	<form action='' id='formSignup'>
		<div class="m-3">
			<label for=''>First name</label>
			<input type='text' name='first_name' />
		</div>
		<div class="m-3">
			<label for=''>Last name</label>
			<input type='text' name='last_name' />
		</div>
		<div class="m-3">
			<label for=''>Age</label>
			<input type='number' name='age' />
		</div>
		<div class="m-3">
			<label for=''>Email</label>
			<input type='email' name='email' />
		</div>
		<div class="m-3">
			<label for=''>Password</label>
			<input type='password' name='password' />
		</div>
		<div class="d-flex justify-content-evenly m-3">
			<label for=''>Role</label>
			<div class="d-flex">
				<div class="form-check ms-3 border-1">
					<input class="form-check-input" type="radio" name="role" id="role-admin">
					<label class="form-check-label" for="role-admin">
						Admin
					</label>
				</div>
				<div class="form-check ms-3 border-1">
					<input class="form-check-input" type="radio" name="role" id="role-user" checked>
					<label class="form-check-label" for="role-user">
						User
					</label>
				</div>
			</div>
		</div>

		<button type='submit' class="btn">Sign up</button>
	</form>
	
	<a href='/api/login' class="btn">Back to Login</a>
</div>

<script src='/js/signup.js'></script>