<section class='m-5 d-flex justify-content-end'>
	<a href='/api/products' class='btn btn-secondary fs-5'>Continue without logging in</a>	
</section>

<div class='container'>
	<h1>Sign up</h1>
	<div class='container-signup col-md-8'>
		<form action='' id='formSignup' class='fs-3'>
			<div class='m-3'>
				<input type='text' name='first_name' placeholder='First name' class='w-75 text-center' />
			</div>
			<div class='m-3'>
				<input type='text' name='last_name' placeholder='Last name' class='w-75 text-center' />
			</div>
			<div class='m-3'>
				<input type='number' name='age' placeholder='Age' class='w-75 text-center' />
			</div>
			<div class='m-3'>
				<input type='email' name='email' placeholder='Email' class='w-75 text-center' />
			</div>
			<div class='m-3'>
				<input type='password' name='password' placeholder='Password' class='w-75 text-center' />
			</div>
			<div class='d-flex justify-content-evenly m-3'>
				<label for=''>Role:</label>
				<div class='d-flex'>
					<div class='form-check ms-3 border-1'>
						<input class='form-check-input' type='radio' name='role' id='role-admin'>
						<label class='form-check-label' for='role-admin'>
							Admin
						</label>
					</div>
					<div class='form-check ms-3 border-1'>
						<input class='form-check-input' type='radio' name='role' id='role-user' checked>
						<label class='form-check-label' for='role-user'>
							User
						</label>
					</div>
				</div>
			</div>

			<button type='submit' class='btn btn-secondary fs-3'>Sign up</button>
		</form>

		<p class='fs-4 text-end'>Do you already have an account? <a href='/api/login'>Log in.</a></p>
	</div>
</div>

<script src='/js/signup.js'></script>