{{#if ticket}}
    <div class="d-flex flex-column align-items-center">
        <h2>Ticket purchase</h2>
        <div class="fs-4">
            <p>Code: <span class='bold'>{{ticket.code}}</span></p>
            <p>Date: <span class='bold'>{{ticket.purchase_datetime}}</span></p>
            <p>Amount: <span class='bold'>{{ticket.amount}}</span></p>
            <p>Purchaser: <span class='bold'>{{ticket.purchaser}}</span></p>
        </div>  
    </div>
    <h2>Products purchase</h2>
    <div class='card col-md-6 m-3 fs-4 border-0'>
		<div class='card-body d-flex justify-content-between'>
			<p class='card-text bold'>_id</p>
			<p class='card-text bold'>Quantity</p>
		</div>
	</div>
    {{#each productsPurchase}}
		<div class='card col-md-6 m-3 fs-4'>
			<div class='card-body d-flex justify-content-between'>
				<p class='card-text bold'>{{this._id}}</p>
				<p class='card-text bold'>{{this.quantity}}</p>
			</div>
		</div>
	{{/each}}
{{/if}}
{{#if productsOutOfStock}}
    <h2>Products out of stock</h2>
    <div class='card col-md-6 m-3 fs-4 border-0'>
		<div class='card-body d-flex justify-content-between'>
			<p class='card-text bold'>_id</p>
			<p class='card-text bold'>Quantity</p>
		</div>
	</div>
    {{#each productsOutOfStock}}
		<div class='card col-md-6 m-3 fs-4'>
			<div class='card-body d-flex justify-content-between'>
				<p class='card-text bold'>{{this._id}}</p>
				<p class='card-text bold'>{{this.quantity}}</p>
			</div>
		</div>
	{{/each}}
{{/if}}
<div>
	<a href='/api/products' class='btn btn-secondary m-3 fs-3'>Back to home</a>
</div>