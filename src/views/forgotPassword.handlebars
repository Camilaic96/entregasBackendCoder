<div class='container'>
	{{#if user}}
		<h1>Password reset</h1>
		<div class='container-forgotPass col-md-8'>
			<form action='' id='forgotPasswordForm' class=' fs-3'>
				<div class='m-3'>
                    <label id="email">{{email}}</label>
                </div>
				<div class='m-3'>
                    <input type='password' name='password' placeholder='New password' class='w-75 text-center' />
                </div>

				<button type='submit' class='btn btn-secondary fs-3'>Create new password</button>
			</form>
			<div class='col-md-12'>
				<p class='fs-4 text-end'>Back to <a href='/api/login'>Log in.</a></p>
			</div>
		</div>
	{{else}}
		<h2>Error 404. Not found</h2>
		<h4>Expired link</h4>
			<p class='fs-4 text-end'>Back to <a href='/api/resetPassword'>Reset Password</a></p>
	{{/if}}

</div>


<script src='/js/forgotPassword.js'></script>