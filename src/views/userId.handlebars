<div class='d-flex align-items-center justify-content-center flex-column offset-2 col-md-8'>
	<div class='card fs-5 col-md-6'>
		<div class='card-body'>
			<p class='card-text'>First name: <span class='bold'>{{first_name}}</span></p>
            <p class='card-text'>Last name: <span class='bold'>{{last_name}}</span></p>
            <p class='card-text'>Email: <span class='bold'>{{email}}</span></p>
            <p class='card-text'>Role: <span class='bold'>{{role}}</span></p>
            <div class="d-flex align-items-center justify-content-between">
				<div>
					<p>
						<a class="btn btn-primary" data-bs-toggle="collapse" href="#updateRolecollapse" role="button" aria-expanded="false" aria-controls="updateRolecollapse">Update role</a>
					</p>
					<div class="collapse" id="updateRolecollapse">
						<div class='d-flex'>	
							<div class='form-check ms-3 border-1'>
								<input class='form-check-input' type='radio' name='role' id='role-user'>
								<label class='form-check-label' for='role-user'>
									User
								</label>
							</div>
							<div class='form-check ms-3 border-1'>
								<input class='form-check-input' type='radio' name='role' id='role-premium'>
								<label class='form-check-label' for='role-premium'>
									Premium
								</label>
							</div>
							<div class='form-check ms-3 border-1'>
								<input class='form-check-input' type='radio' name='role' id='role-admin'>
								<label class='form-check-label' for='role-admin'>
									Admin
								</label>
							</div>
							<button type='submit' class='btn btn-secondary fs-3' id="changeRoleBtn">Check</button>
						</div>
					</div>
				</div>
				<div>
					<p id="uid" hidden>{{_id}}</p>
					<button class='btn fs-5' id="deleteUserBtn"><img src='/img/delete.png' alt='dropdown account' width='32' height='32'></button>
				</div>
			</div>
		</div>
	</div>
</div>

<script src='/js/user.js'></script>