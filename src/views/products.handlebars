<header id='header' class='p-4 d-flex justify-content-between align-items-center'>
	<img src='/img/logo.png' alt='logo' width='100' class="mx-5">
	{{#if user}}
	<div>
		<p class='fs-3'>Welcome <span class='bold '>{{user.first_name}} {{user.last_name}}</span></p>
	</div>
	<div class='d-flex align-items-center'>
				<a href='/api/carts/{{idCart}}' class='btn btn-light border mx-3'><img src='/img/cart.svg' alt='cart' width='32' height='32'></a>
				<div class='dropdown mx-3'>
					<button class='dropdown-toggle border-0 p-2' type='button' data-bs-toggle='dropdown' aria-expanded='false'>
						<img src='/img/account.png' alt='dropdown account' width='32' height='32'>
					</button>
					<ul class='dropdown-menu fs-4'>
						<li><a href='/api/profile' class='dropdown-item'>Profile</a></li>
						{{#if isUser}}
							<li><a href='/api/premium' class='dropdown-item'>Be Premium</a></li>
						{{/if}}
						<li><a href='/api/auth/logout' class='dropdown-item'>Log out</a></li>
					</ul>
				</div>
			</div>
	{{else}}
		<div>
			<a href='/api/login' class='btn btn-outline-dark fs-4 m-4'>Log in</a>	
			<a href='/api/signup' class='btn btn-outline-dark fs-4 m-4'>Sign up</a>	
		</div>
	{{/if}}
</header>

{{#if user}}
	{{#if isUser}}
	{{else}}
		<div class="d-flex justify-content-end p-3">
			<a href='/api/products/realtimeproducts' class='btn btn-outline-dark fs-5'>Manage products</a>
		</div>
	{{/if}}
{{/if}}

<section id='section-products' class='m-5'>
	<div class='row d-flex justify-content-evenly'>
		<div class='d-flex justify-content-center'>	
			<div class='dropdown'>
				<button class='dropdown-toggle border-0 fs-3' type='button' data-bs-toggle='dropdown' aria-expanded='false'>Sort by:</button>
				<ul class='dropdown-menu sort fs-4'>
					<li><a href='/api/products?sort=ASC' class='dropdown-item'>By price - from lowest to highest.</a></li>
					<li><a href='/api/products?sort=DESC' class='dropdown-item'>By price - from highest to lowest.</a></li>
				</ul>
			</div>
			<nav aria-label='Page navigation' class='mx-5'>
				<ul class='pagination'>
				</ul>
			</nav>
		</div>
		{{#each products}}
			<div class='card col-md-3 m-3'>
				<div class='card-body'>
					<p class='card-text'>Id: <span class='bold'>{{this.id}}</span></p>
					<p class='card-text'>Title: <span class='bold'>{{this.title}}</span></p>
					<p class='card-text'>Description: <span class='bold'>{{this.description}}</span></p>
					<p class='card-text'>Code: <span class='bold'>{{this.code}}</span></p>
					<p class='card-text'>Price: <span class='bold'>{{this.price}}</span></p>
					<p class='card-text'>Stock: <span class='bold'>{{this.stock}}</span></p>
					<p class='card-text'>Category: <span class='bold'>{{this.category}}</span></p>
				</div>
				<a href='/api/products/{{this.id}}' class='btn btn-secondary'>See more</a>
			</div>
		{{/each}}
	</div>
</section>

<script src='/js/pagination.js'></script>