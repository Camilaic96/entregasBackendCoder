<div class='card'>
	<div class='card-body'>
		<p class='card-text'>Id: <span class="bold">{{_id}}</span></p>
		<p class='card-text'>Title: <span class="bold">{{title}}</span></p>
		<p class='card-text'>Description: <span class="bold">{{description}}</span></p>
		<p class='card-text'>Code: <span class="bold">{{code}}</span></p>
		<p class='card-text'>Price: <span class="bold">{{price}}</span></p>
		<p class='card-text'>Stock: <span class="bold">{{stock}}</span></p>
		<p class='card-text'>Category: <span class="bold">{{category}}</span></p>
		<p class='card-text'>Status: <span class="bold">{{status}}</span></p>
		<p class='card-text'>Thumbnail: <span class="bold">{{thumbnail}}</span></p>
	</div>
	<button class='btn'>Add to cart</button> <!--AGREGAR RUTA-->
</div>

